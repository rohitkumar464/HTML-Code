        </div>
    </div>
    <div id="element-control">
        <div class="time-selection">Time Selection</div>
        <div class="time-interval">Select Time interval from the given intervals:</div>
        <div class="time-from-to">
            <div class="time-from">
                <select value="" id="custom_form_time_from_when" name="time_from_when[]" class="dateTimePicker"  placeholder="Select Time From When">
                    <option value="{{ 'select_time_from'|trans }}">{{ 'select_time_from'|trans }}</option>
                    <option value="08:30">08:30</option>
                    <option value="09:00">09:00</option>
                    <option value="09:30">09:30</option>
                </select>
                {# <input type="text" id="timeFrom" class="dateTimePicker" name="timeFrom" placeholder="Select Time From When"> #}
            </div>
            <div class="between">To</div>
            <div class="time-to">
                <select value="{{ 'select_time_from'|trans }}" id="custom_form_time_till_when" name="custom_form[time_till_when][]" class="dateTimePicker" placeholder="Select Time Till When">
                    <option value="{{ 'select_time_till'|trans }}">{{ 'select_time_till'|trans }}</option>
                    <option value="09:30">09:30</option>
                    <option value="10:00">10:00</option>
                    <option value="10:30">10:30</option>
                </select>
                {# <input type="text" id="timeTo" class="dateTimePicker" name="timeTo" placeholder="Select Time Till When"> #}
            </div>
        </div>
    </div>
</div>
