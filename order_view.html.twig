        <div class="date-selection">Date Selection</div>
        <div class="date-from-to">
            <div class="date-from">
                <div class="from">From</div>
                <input type="text" id="dateFrom" class="dateTimePicker" name="dateFrom" placeholder="Select Month and Year">
            </div>
            <div class="date-to">
                {# <div class="to">To</div> #}
